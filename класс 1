using System;
using System.Collections.Generic;
using System.Linq;
using System.Reflection;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp9
{


    class Actor
    {
        public string Name;
        public int Age;
        public string Country;
        public int FilmsCount;

     
        public Actor(string n, int a, string c, int f)
        {
            Name = n; Age = a; Country = c; FilmsCount = f;
        }

      
        public void Introduce()
        {
            Console.WriteLine($"Актёр: {Name}");
        }

        public bool IsAdult()
        {
            return Age >= 18;
        }

        public virtual void ShowInfo()
        {
            Console.WriteLine($"{Name}, {Age} лет, {Country}");
        }

        public virtual double CalculateRating()
        {
            return FilmsCount * 0.5;
        }

    
        public void CommonAction()
        {
            Console.WriteLine("Базовая актёрская работа");
        }

        public string GetTypeName()
        {
            return "Актёр";
        }
    }
}

  
